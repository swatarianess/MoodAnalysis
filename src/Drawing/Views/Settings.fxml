        <VBox fx:id="miscellaneousVboxInput" prefHeight="113.0" prefWidth="400" spacing="15">
            <CheckBox mnemonicParsing="false" text="Start engine" />
            <Slider max="365.0" showTickLabels="true" showTickMarks="true" />
            <padding>
                <Insets top="20.0" />
            </padding>
        </VBox>
    </HBox>
    <HBox layoutX="450.0" layoutY="692.0" prefHeight="25.0" prefWidth="245.0" spacing="35">
        <children>
            <Button mnemonicParsing="false" text="Cancel" />
            <Button mnemonicParsing="false" text="Apply" />
            <Button mnemonicParsing="false" text="Save" />
        </children></HBox>

