            <Label text="Site visit behavior" />
            <Label text="Interval between checks" />
            <Label text="Ignore robots.txt" />
        </VBox>
        <VBox fx:id="siteVisitVboxInput" prefHeight="100.0" prefWidth="400.0" spacing="15.0">
            <Slider max="3600.0" min="10.0" showTickLabels="true" showTickMarks="true" />
            <CheckBox mnemonicParsing="false" text="Robot.txt" />
            <padding>
                <Insets top="15.0" />
            </padding>
        </VBox>
    </HBox>

    <HBox fx:id="ThreadSettingsHbox" layoutX="30.0" layoutY="405.0" prefHeight="100.0" prefWidth="800.0">
