            <Label text="Path to engine configurations" />
        </VBox>
        <VBox fx:id="pathSettingsVboxInput" alignment="CENTER" prefHeight="100.0" prefWidth="400.0" spacing="15">
            <TextField />
            <TextField />
            <padding>
                <Insets top="15.0" />
            </padding>
        </VBox>
    </HBox>

    <HBox fx:id="levelsSettingsHbox" layoutX="30.0" layoutY="145.0" prefHeight="100.0" prefWidth="800.0">
        <VBox fx:id="levelsSettingsVbox" prefHeight="100.0" prefWidth="400.0" spacing="15">
            <Label text="Levels" />
            <Label text="Logging level" />
            <Label text="Warning level" />
            <opaqueInsets>
                <Insets />
            </opaqueInsets>
        </VBox>
        <VBox fx:id="levelsVboxInput" prefHeight="100.0" prefWidth="400.0" spacing="15">
            <ComboBox prefHeight="25.0" prefWidth="150.0" promptText="Select level (1-5)" />
            <ComboBox prefHeight="25.0" prefWidth="150.0" promptText="Select level (1-5)" />
            <padding>
                <Insets top="15.0" />
            </padding>
        </VBox>
