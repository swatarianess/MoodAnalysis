            <Label text="Thread settings" />
            <Label text="Thread priority" />
            <Label text="Minimum number of threads" />
            <Label text="Maximum number of threads" />
        </VBox>
        <VBox fx:id="threadSettingsVboxInput" prefHeight="113.0" prefWidth="400.0" scaleShape="false" spacing="15">
            <children>
                <ComboBox prefWidth="150.0" promptText="Select priority (1-20)" />
                <TextField scaleShape="false" text="40" />
                <TextField text="4000" />
            </children>
            <padding>
                <Insets top="20.0" />
            </padding></VBox>
    </HBox>

    <HBox fx:id="MiscellaneousSettingsHbox" layoutX="30.0" layoutY="574.0" prefHeight="100.0" prefWidth="800.0">
